{
  "manifest_version": 3,
  "name": "Interview Assistant",
  "version": "1.0",
  "description": "A simple UI for interview assistance",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "ws://localhost:8765/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
